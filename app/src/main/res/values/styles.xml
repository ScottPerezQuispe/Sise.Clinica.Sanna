<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BotonBasicoLogin" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:ems">8</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">#00FF00</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextBasicoLogin" parent="android:Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:ems">8</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">#F2F2F2</item>
        <item name="android:textColor">#F2F2F2</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="CampoTextoLogin" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">normal</item>
        <item name="android:ems">12</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

</resources>
